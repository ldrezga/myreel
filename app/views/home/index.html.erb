<div id="user_nav">
  <% if current_user %>
    <p>Signed in as <strong><%= current_user.name %></strong>!</p>
    <%= link_to "Sign out", signout_path, id: "sign_out" %>
  <% else %>
    <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in", :class => "sign-out" %>
  <% end %>
</div>